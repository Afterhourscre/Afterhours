<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template" name="welpixel.swatch.validation.fix" template="Magento_Catalog::validation_fix.phtml" />
        </referenceContainer>

        <referenceContainer name="product.info.media">
            <block class="Magento\Cms\Block\Block" name="cms.block.under.description" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">product-under-description</argument>
                </arguments>
            </block>
        </referenceContainer>

    </body>
</page>

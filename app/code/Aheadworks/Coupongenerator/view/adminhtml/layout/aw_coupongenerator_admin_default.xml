<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Aheadworks_Coupongenerator::css/coupongenerator.css"/>
    </head>
    <body>
        <referenceContainer name="page.main.actions">
            <block class="Aheadworks\Coupongenerator\Block\Adminhtml\Page\Menu" name="aw_coupongenerator_menu">
                <block class="Aheadworks\Coupongenerator\Block\Adminhtml\Page\Menu\Item" name="aw_coupongenerator_menu_item.coupon_generate">
                    <arguments>
                        <argument name="path" xsi:type="string">*/coupon/generate</argument>
                        <argument name="label" xsi:type="string">Generate Coupons</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_Coupongenerator::generate_coupons</argument>
                        <argument name="controller" xsi:type="string">coupon</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Coupongenerator\Block\Adminhtml\Page\Menu\Item" name="aw_coupongenerator_menu_item.coupons">
                    <arguments>
                        <argument name="path" xsi:type="string">*/coupons/index</argument>
                        <argument name="label" xsi:type="string">Manage Coupon Codes</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_Coupongenerator::manage_coupons</argument>
                        <argument name="controller" xsi:type="string">coupons</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Coupongenerator\Block\Adminhtml\Page\Menu\Item" name="aw_coupongenerator_menu_item.rule">
                    <arguments>
                        <argument name="path" xsi:type="string">*/rule/index</argument>
                        <argument name="label" xsi:type="string">Manage Rules</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_Coupongenerator::manage_rules</argument>
                        <argument name="controller" xsi:type="string">rule</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Coupongenerator\Block\Adminhtml\Page\Menu\Item" name="aw_coupongenerator_menu_item.system_config">
                    <arguments>
                        <argument name="path" xsi:type="string">adminhtml/system_config/edit/section/aw_coupongenerator</argument>
                        <argument name="label" xsi:type="string">Settings</argument>
                        <argument name="controller" xsi:type="string">system_config</argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Coupongenerator\Block\Adminhtml\Page\Menu\Item" name="aw_coupongenerator_menu_item.readme">
                    <arguments>
                        <argument name="label" xsi:type="string">Readme</argument>
                        <argument name="link_attributes" xsi:type="array">
                            <item name="href" xsi:type="string">https://aheadworks.atlassian.net/wiki/spaces/EUDOC/pages/1227784654/Coupon+Code+Generator+-+Magento+2</item>
                            <item name="target" xsi:type="string">_blank</item>
                            <item name="class" xsi:type="string">separator</item>
                        </argument>
                    </arguments>
                </block>
                <block class="Aheadworks\Coupongenerator\Block\Adminhtml\Page\Menu\Item" name="aw_coupongenerator_menu_item.support">
                    <arguments>
                        <argument name="label" xsi:type="string">Get Support</argument>
                        <argument name="link_attributes" xsi:type="array">
                            <item name="href" xsi:type="string">http://ecommerce.aheadworks.com/contacts/</item>
                            <item name="target" xsi:type="string">_blank</item>
                        </argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
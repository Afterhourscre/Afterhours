<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="Mageplaza\CallForPrice\Block\Adminhtml\Rules\Edit" name="callforprice_rules_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Mageplaza\CallForPrice\Block\Adminhtml\Rules\Edit\Tabs" name="callforprice_rules_edit_tabs">
                <block class="Mageplaza\CallForPrice\Block\Adminhtml\Rules\Edit\Tab\General"
                       name="callforprice_rules_edit_tab_general"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">general</argument>
                    <argument name="block" xsi:type="string">callforprice_rules_edit_tab_general</argument>
                </action>

                <block class="Mageplaza\CallForPrice\Block\Adminhtml\Rules\Edit\Tab\Whattoshow"
                       name="callforprice_rules_edit_tab_whattoshow"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">whattoshow_section</argument>
                    <argument name="block" xsi:type="string">callforprice_rules_edit_tab_whattoshow</argument>
                </action>

                <block class="Mageplaza\CallForPrice\Block\Adminhtml\Rules\Edit\Tab\Wheretoshow"
                       name="callforprice_rules_edit_tab_wheretoshow"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">wheretoshow_section</argument>
                    <argument name="block" xsi:type="string">callforprice_rules_edit_tab_wheretoshow</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>

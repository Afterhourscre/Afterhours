<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="layout_load_before">
        <observer name="mpcfp_layout_load_before_callforprice" instance="Mageplaza\CallForPrice\Observer\CallForPriceLayoutLoadBefore"/>
    </event>
    <event name="controller_action_predispatch_checkout_cart_index">
        <observer name="mpcfp_disable_checkout_cart_index" instance="Mageplaza\CallForPrice\Observer\DisableShoppingCart"/>
    </event>
    <event name="controller_action_predispatch_checkout_index_index">
        <observer name="mpcfp_disable_checkout_checkout_index" instance="Mageplaza\CallForPrice\Observer\DisableCheckout"/>
    </event>
</config>